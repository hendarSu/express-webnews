<!-- Daftar Berita -->
<div class="container mt-5">
    <a href="/" class="btn float-right btn-primary">Back</a>

    <h2>
        <%= news.title %>
    </h2>

    <div class="row">
        <div class="col-md-12">
            <center>
                <img src="<%= news.cover %>" width="75%" class="m-2 rounded" alt="Gambar Berita">
            </center>
            <p class="mt-1">
                <%- news.content %>
            </p>
        </div>
    </div>

    <!-- Section Komentar -->
    <section id="comments" style="margin-bottom: 100px;">
        <h3>Komentar</h3>
        <hr>
        <% if(news.comments) { %>
        <div id="comment-list">
            <% news.comments.forEach(comment=> { %>
                <div class="comment-item">
                    <h5>
                        <%= comment.name %>
                    </h5>
                    <p>
                        <%= comment.comment %>
                    </p>
                </div>
                <hr>
                <% }); %>
        </div>
        <% } %>

        <!-- Form untuk menambahkan komentar baru -->
        <form id="comment-form">
            <div class="form-group">
                <label for="name">Nama:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="comment">Komentar:</label>
                <textarea class="form-control" id="comment" name="comment" rows="4" required></textarea>
            </div>
            <input type="hidden" id="newsId" name="newsId" value="<%= news.id %>">
            <button type="submit" class="btn btn-primary">Kirim Komentar</button>
        </form>
    </section>
</div>